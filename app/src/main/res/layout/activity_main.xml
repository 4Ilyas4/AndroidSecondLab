<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_color">

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="@string/name_hint"
        android:inputType="text"
        android:background="@drawable/edit_text_background"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_text_color"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:textSize="12sp"
            android:layout_margin="4dp"
            android:id="@+id/button_name"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_name_text"
            android:textColor="@color/button_text_color"
            android:background="@drawable/button_background" />

        <Button
            android:textSize="12sp"
            android:layout_margin="4dp"
            android:id="@+id/button_grooming"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_grooming_text"
            android:textColor="@color/button_text_color"
            android:background="@drawable/button_background" />

        <Button
            android:textSize="12sp"
            android:layout_margin="4dp"
            android:id="@+id/button_origin"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_origin_text"
            android:textColor="@color/button_text_color"
            android:background="@drawable/button_background" />

        <Button
            android:textSize="12sp"
            android:layout_margin="4dp"
            android:id="@+id/button_intelligence"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_intelligence_text"
            android:textColor="@color/button_text_color"
            android:background="@drawable/button_background" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="5dp"
        android:id="@+id/main_activity_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/recycler_view_background"
        android:clipToPadding="false"
        android:paddingStart="4dp"
        android:paddingTop="8dp"
        android:paddingEnd="4dp"
        android:paddingBottom="8dp" />

    <Button
        android:layout_margin="5dp"
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/button"
        android:textColor="@color/button_text_color"
        android:background="@drawable/button_background" />

</LinearLayout>
